<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="gct.example.com.mountcarmelschool.Wise">
    <!--android:background="@mipmap/bg1"-->



    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2874A6">

        <ImageView
            android:id="@+id/imageWiseback"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back"
          />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="WISE"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:weightSum="5"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:backgroundTintMode="add"
    android:layout_height="match_parent">






    <LinearLayout
        android:background="@drawable/ring"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="3"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <View
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </View>



        <LinearLayout
            android:layout_marginRight="35dp"
            android:layout_marginTop="80dp"
            android:weightSum="4"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:id="@+id/imageWorthy"
                android:layout_width="0dp"
                android:background="@drawable/whi"
                android:layout_height="90dp" />
            <ImageView
                android:id="@+id/imageIntellect"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/bl"
                android:layout_height="90dp" />



            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />




        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginBottom="37dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
               android:layout_marginLeft="5dp"
                android:id="@+id/imageStature"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/imgr"
                android:layout_height="90dp" />
            <ImageView
             android:layout_marginRight="5dp"
                android:id="@+id/imageEmotion"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/imgg"
                android:layout_height="90dp" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />




        </LinearLayout>
        <View
            android:layout_weight=".50"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </View>





    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
         android:layout_weight="2"
         android:weightSum="2"
         android:layout_gravity="center"
          android:layout_width="match_parent"
           android:layout_height="110dp">



        <ImageView
            android:layout_weight=".8"
            android:src="@drawable/wiselogo"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <android.support.v7.widget.CardView
            android:layout_weight=".8"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#2874A6"
            android:id="@+id/card1View3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:textColor="#FFF"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="&quot;You shall love the Lord your God with all your heart and with all your soul and with all your mind&quot;"
                android:textSize="18sp"
                android:textStyle="normal" />

                <TextView
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textColor="#FFF"
                    android:text="- Jesus Christ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




            </LinearLayout>

        </android.support.v7.widget.CardView>







</LinearLayout>



</LinearLayout>


    </ScrollView>

</LinearLayout>
