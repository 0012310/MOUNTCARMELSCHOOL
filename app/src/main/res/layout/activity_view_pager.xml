            android:layout_height="60dp"
            app:tabGravity="fill"
            app:tabTextColor="#a4a4a6"
            app:tabSelectedTextColor="#FFF"
            app:tabMode="fixed"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:theme="@style/Base.Widget.Design.TabLayout" />
